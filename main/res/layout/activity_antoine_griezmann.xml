<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AF1F03"
    tools:context=".AntoineGriezmannActivity">


    <TextView
        android:id="@+id/txvGriezman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antoine Griezmann"
        android:textColor="#ffffff"
        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <ImageView
        android:id="@+id/griezmann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/griezmann"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/btnInfoGriezmann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:layout_marginBottom="7dp"
        android:text="Informacion"
        app:layout_constraintBottom_toTopOf="@+id/txvInfoGriezmann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/griezmann" />

    <TextView
        android:id="@+id/txvInfoGriezmann"
        android:layout_width="312dp"
        android:layout_height="251dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:text="Antoine Griezmann (Mâcon, Borgoña,Francia, 21 de marzo de 1991) es un futbolista francés que juega como delantero en el Fútbol Club Barcelona de la Primera División de España. Además es internacional con la selección de fútbol de Francia. Ganó Copa Mundial de la FIFA de 2018, en la cual anotó cuatro goles, fue premiado con el Balón de Bronce al tercer mejor jugador de la competición, la Bota de Platacomo segundo máximo goleador y también nombrado Jugador del Partido en la final que Francia venció a Croacia por 4-2, donde marcó el segundo gol francés."
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfoGriezmann" />

    <Button
        android:id="@+id/btnRegresarGriezmann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="57dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>